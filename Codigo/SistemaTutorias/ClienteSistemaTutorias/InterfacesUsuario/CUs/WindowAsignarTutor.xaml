<Window x:Class="ClienteSistemaTutorias.InterfacesUsuario.WindowAsignarTutor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteSistemaTutorias.InterfacesUsuario"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Title="Asignar Tutor a Estudiante" Height="450" Width="800" Icon="..\..\Resources/1200px-Logo_de_la_Universidad_Veracruzana.svg.png">
    <Grid>
        <Label Content="Tutor que se desea:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="20" Width="209"/>
        <ComboBox x:Name="cbTutor" HorizontalAlignment="Left" Margin="219,0,0,0" VerticalAlignment="Center" Width="571" FontSize="20"/>
        <Button x:Name="btGuardarAsignacion" Content="Asignar" HorizontalAlignment="Center" Height="48" Margin="0,312,0,0" VerticalAlignment="Top" Width="144" Click="btAsignar_Click"/>

    </Grid>
</Window>
