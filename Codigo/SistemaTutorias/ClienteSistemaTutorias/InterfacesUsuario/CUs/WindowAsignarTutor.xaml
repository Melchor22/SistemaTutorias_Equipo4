<Window x:Class="ClienteSistemaTutorias.InterfacesUsuario.CUs.WindowAsignarTutor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteSistemaTutorias.InterfacesUsuario.CUs"
        mc:Ignorable="d"
        Title="Asignar Tutor a Estudiante" Height="450" Width="800">
    <Grid>
        <Label Content="Tutor:" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" FontSize="20" Width="99"/>
        <ComboBox x:Name="cbTutor" HorizontalAlignment="Left" Margin="90,85,0,0" VerticalAlignment="Top" Width="571" FontSize="20"/>
        <Label Content="Estudiante:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="20" Width="112"/>
        <ComboBox x:Name="cbEstudiante" HorizontalAlignment="Left" Margin="127,203,0,0" VerticalAlignment="Top" Width="534" FontSize="20"/>
        <Button x:Name="btGuardarAsignacion" Content="Asignar" HorizontalAlignment="Center" Height="48" Margin="0,308,0,0" VerticalAlignment="Top" Width="144" Click="btAsignar_Click"/>

    </Grid>
</Window>
