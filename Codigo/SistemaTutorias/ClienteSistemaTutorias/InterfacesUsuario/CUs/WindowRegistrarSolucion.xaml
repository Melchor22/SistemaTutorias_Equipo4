<Window x:Class="ClienteSistemaTutorias.InterfacesUsuario.CUs.WindowRegistrarSolucion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteSistemaTutorias.InterfacesUsuario.CUs"
        mc:Ignorable="d"
        Title="WindowRegistrarSolucion" Height="360" Width="640"
        Icon="..\..\Resources/1200px-Logo_de_la_Universidad_Veracruzana.svg.png"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <TextBox x:Name="tbSolucion" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="554" FontSize="16" Height="223" Margin="0,75,0,0"/>
        <Label Content="Solución:" HorizontalAlignment="Left" Margin="43,20,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="btRegistrarSolucion" Content="Registrar Solución" HorizontalAlignment="Left" Margin="447,20,0,0" VerticalAlignment="Top" FontSize="16" Width="150" Height="35" Click="ButtonRegistrarSolucion_Click"/>

    </Grid>
</Window>
